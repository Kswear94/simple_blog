<div class="center">
   <h1>Current Blog Posts</h1>
   
   <table>
       <tr>
         <th class="col-1">Title</th>
         <th class="col-2">Entry</th>
         <th class="col-3"></th>
         <th class="col-4"></th>
         <th class="col-5"></th>
       </tr>
       
       <% @posts.each do |post| %>
         <tr>
            <td><%= post.title %></td>
            <td><%= post.entry %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post_path(post), 
                                       method: :delete,
                                       data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
   </table>
</div>